<table
  cellpadding='0'
  cellspacing='0'
  border='0'
  style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; color: #333333;"
>
  <tr>
    <td style='border-left: 3px solid #1a73e8; padding-left: 10px;'>
      {{#if logoUrl}}
        <img
          src='{{baseUrl}}{{logoUrl}}'
          alt='Company Logo'
          style='max-width: 100px; max-height: 50px; margin-bottom: 10px;'
        />
      {{/if}}
      <br />
      <strong style='font-size: 16px; color: #1a73e8;'>{{fullName}}</strong>
      {{#if position}}<br /><span
          style='font-size: 14px; color: #666666;'
        >{{position}}{{#if company}}, {{company}}{{/if}}</span>{{/if}}
      <br /><span style='font-size: 14px;'>{{phone}}
        |
        <a
          href='mailto:{{email}}'
          style='color: #1a73e8; text-decoration: none;'
        >{{email}}</a></span>
    </td>
  </tr>
</table>
